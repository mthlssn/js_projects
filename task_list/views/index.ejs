<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title> Task List </title>
</head>
<body>
    <main>
        <div class="forms"> 

            <% if (task == null) { %> 
                <%- include('./components/form', {action: "create", value: ""}) %>
            <% } else { %>
                <%- include('./components/form', {action: "updateOne/" + task._id, value: task.task}) %>
            <% } %>
        </div>

        <div class="tasks">
            <% taskList.forEach((task) => { %>
                <div class="task">
                    <div class="container_text_task">
                        <p class="data_task"> <%= task.date.toLocaleDateString('pt-BR') %> </p>
                        <p class="nome_task"> <%= task.task %> </p>
                    </div>

                    <div class="container_botoes_task">
                        <% if (taskDelete == null) { %>
                            <a class="botoes" href="/getById/<%= task._id%>/update" > <i class="bi bi-pencil"></i> </a>
                            <a class="botoes" href="/getById/<%= task._id%>/delete"> <i class="bi bi-x-lg"></i> </a>
                        <% } else { %>
                            <% if (taskDelete.id == task._id) { %>
                                <a class="botoes" href="/deleteOne/<%= taskDelete._id%>"> <i class="bi bi-check2"></i> </a>
                                <a class="botoes" href="/"> <i class="bi bi-x-lg"></i> </a>
                            <% } else { %>
                                <a class="botoes" href="/getById/<%= task._id%>/update"> <i class="bi bi-pencil"></i> </a>
                                <a class="botoes" href="/getById/<%= task._id%>/delete"> <i class="bi bi-x-lg"></i> </a>
                            <% } %>
                        <% } %>   
                    </div>
                </div>
            <% }) %> 
        </div>
    </main>
    <script src="/script.js"></script>
</body>
</html>